		function chartView() {
		
			var chartData = {};	//Root
			var series = [];	//Depth2
			var seriesDetail = {};	//Depth3
			var options;
			var arrNumber = "";
			var count = 0;
		
	 			
					var data = {};
					var seriesData = {};
					var chart_id = document.getElementById("summeryGrid");
					var chk = 0;

						
					data.categories = [];
					data.series = [];
					
					seriesData.name ='Value';
					seriesData.data = [];
		
			        for(var i = 0; i < summery.length; i++){
			        	
							var dataVal = summery[i].object;
							data.categories.push(dataVal);			
							seriesData.data.push(summery[i].objectCnt);
							chk ++;
			        }
			        
			        data.series.push(seriesData);
			        if(chk > 0 && data != null){   
				        options = {
				                chart: {width: 600,height: 300 },
				                yAxis: {title: 'Value' },
				                xAxis: {title: 'Data' },
				                chartExportMenu: {visible: false },
								legend: {visible: false },
				            };
				    
						tui.chart.columnChart(chart_id, data, options);
						chart_id.style.display  = 'inline-block';
						count++;
			        }
		} 
	
		
