		<script type="text/javascript"  class="code-js">

			$(document).ready(function() {
				if(sessionCon == ''){
					alert('진단대상 데이터베이스 설정이 안되어 있습니다.\n\n 설정페이지로 이동합니다.');
					location.href = "/mngr/basicInfo/dgnssDbmsList";
