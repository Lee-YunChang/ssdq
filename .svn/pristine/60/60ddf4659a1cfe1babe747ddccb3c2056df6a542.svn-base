<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout" layout:decorator="layout/loginLayout">
	<div layout:fragment="content">
	    <div class="content_area bg_type01">
	        <div class="login_area">
	            <div class="login_title">
	            	<strong th:text="#{UIT0024}">로그인</strong>
	            </div>
	            <form id="loginFrm" class="user" th:action="@{/login}" method="POST">
					<!-- <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" /> -->
					<input type="hidden" id="uit0015" th:value="#{UIT0015}" />
					<input type="hidden" id="uit0018" th:value="#{UIT0018}" />
					<input type="hidden" id="lang" th:value="${lang}" />
					<input type="hidden" id="menuLang" th:value="${menuLang}" />
	                <!-- <div class="login"> -->
	                <div class="login_form marginb5">
	                    <!-- <p>
							<span class="sub_title" th:text="#{UIT0014}"></span>
							<input type="text" class="in_box_type01 in_length290" id="username" name="username" th:value="${param.username}" aria-describedby="username" >
						</p>
	                    <p>
	                    	<span class="sub_title" th:text="#{UIT0017}"></span>
	                    	<input type="password" class="in_box_type01 in_length290" id="password" name="password" >
	                    </p>
	                    <p>
							<input type="button" class="btn_type02 col_black" onclick="login();" th:value="#{UIT0024}" style="margin-left: 131px;">
						</p> -->
						<div class="id_area">
                             <label for="" th:text="#{UIT0014}">아이디</label>
                             <input type="text" class="in_box_type01 in_length290" id="username" name="username" th:value="${param.username}" aria-describedby="username" placeholder="ID" >
                         </div>
                         <div class="password_area">
                             <label for="" th:text="#{UIT0017}">비밀번호</label>
                             <input type="password" class="in_box_type01 in_length290" id="password" name="password" placeholder="Password" >
                         </div>
                         <!-- <button class="login_btn" onclick="login();" ><span th:text="#{UIT0024}"></span></button> -->
                         <input type="button" class="login_btn" th:value="#{UIT0024}" onclick="login();" style="cursor:Pointer;"/>
	                </div>
	                <div align="center">
	                	<p th:if="${param.error ne null}" th:text="${param.errormsg}" style="font-size: 20; color: #FF1C19;"></p>
					</div>
	            </form>        
	        </div>
	    </div>
	
		<script type="text/javascript" class="code-js">
		
			$(document).ready(function() {
			    $("#password").keydown(function(key) {
			        if (key.keyCode == 13) {
			            $("#loginFrm").submit();
			        }
			    });
			});
		
			function login(){
				if(isValidationCheck()){
					$("#loginFrm").submit();
				}
			}
			
			function isValidationCheck(){
				var username = $("#username").val();
				var password = $("#password").val();
				
				if(username == "" || username == null){
					alert($("#uit0015").val());
					$("#username").focus();
					return false;
				}
				if(password == "" || password == null){
					alert($("#uit0018").val());
					$("#password").focus();
					return false;
				}
				return true;
			}
		
		</script>
	</div>
</html>
